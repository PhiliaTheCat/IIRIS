#ifndef __INCLUDED_PIC__
#define __INCLUDED_PIC__

namespace ptc
{
    class Pic
    {
        private:
        unsigned height;
        unsigned width;

        unsigned char *mat;

        public:
        Pic(const unsigned &__height = 0, const unsigned &__width = 0) noexcept(false);
        Pic(const Pic &src) noexcept(false);
        Pic(Pic &&src);

        ~Pic();

        Pic &operator =(const Pic &rhs);
        Pic &operator =(Pic &&rhs);

        inline unsigned get_height() const;
        inline unsigned get_width() const;

        inline unsigned char *get_mat() const;

        inline unsigned char *operator [](const unsigned &x) const;
    };
}

#endif
